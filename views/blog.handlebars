<div class="row">
<div class="col-auto">
<div class="card" id="update-card">
  <div class="card-header">
    Edit Post
  </div>
  <div class="card-body">
    <form class="form update-form">
      <div class="form-group">
        <label for="title">Title:</label>
        <input class="form-input" type="text" id="blog-name" value="{{name}}" />
      </div>
      <div class="form-group">
        <label for="blog">Content:</label>
        <input class="form-input" type="text" id="blog-content" value="{{description}}" />
        
      </div>
      <input class="form-input" type="hidden" id="dataid" value="{{id}}"/>
      <div class="form-group">
        <button class="btn btn-primary"  style="width: 100%; text-align:left"   type="submit">UPDATE BLOG</button>
      </div>

    </form>
   </div>
</div>

</div>
</div>

<script src="../js/blog.js"></script>